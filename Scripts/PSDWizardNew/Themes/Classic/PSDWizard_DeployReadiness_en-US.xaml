<Grid x:Name="_depTabLayout" Grid.ColumnSpan="2">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="490"></ColumnDefinition>
        <ColumnDefinition Width="150"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Label x:Name="_depTabMainTitle" Grid.Column="0" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" FontSize="22" Content="@MainTitle"/>
    <Rectangle Grid.Column="0" Fill="Maroon" HorizontalAlignment="Right" Height="40" Width="40" Margin="0,20,13.5,0" VerticalAlignment="Top">
        <Rectangle.OpacityMask>
            <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_clipboard}"/>
        </Rectangle.OpacityMask>
    </Rectangle>

    <Label  x:Name="_depSelectionProfilesLabel" Content="Profiles:" FontSize="14" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top"/>
    <ComboBox x:Name="_depSelectionProfilesList" HorizontalAlignment="Left" Margin="78,87,0,0" VerticalAlignment="Top" Width="401"/>

    <Canvas x:Name="_depTabValidation01" Grid.Column="0" Margin="10,121,10,379" Background="LightGreen" Visibility="Visible">
        <TextBox x:Name="_depTabValidation01_Name" Grid.Column="0" Background="Transparent" BorderThickness="0" TextWrapping="NoWrap" FontSize="18" IsReadOnly="True" Canvas.Left="10" Canvas.Top="10" Height="30" />
        <Rectangle x:Name="_depTabValidation01_Alert" Grid.Column="0" Width="30" Height="30" Fill="Red" Canvas.Left="430" Canvas.Top="9" Visibility="Visible">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_alert}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Rectangle x:Name="_depTabValidation01_Check" Grid.Column="0" Width="30" Height="30" Fill="Green" Canvas.Left="430" Canvas.Top="10" Visibility="Visible">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_check}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
    </Canvas>

    <Canvas x:Name="_depTabValidation02" Grid.Column="0" Margin="10,176,10,324" Background="LightGreen" Visibility="Visible">
        <TextBox x:Name="_depTabValidation02_Name" Grid.Column="0" Background="Transparent" BorderThickness="0" TextWrapping="NoWrap" FontSize="18" IsReadOnly="True" Canvas.Left="10" Canvas.Top="10" Height="30" />
        <Rectangle x:Name="_depTabValidation02_Alert" Grid.Column="0" Width="30" Height="30" Fill="Red" Canvas.Left="430" Canvas.Top="9" Visibility="Visible">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_alert}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Rectangle x:Name="_depTabValidation02_Check" Grid.Column="0" Width="30" Height="30" Fill="Green" Canvas.Left="430" Canvas.Top="10" Visibility="Visible">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_check}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
    </Canvas>

    <Canvas x:Name="_depTabValidation03" Grid.Column="0" Margin="10,231,10,268" Background="LightGreen" Visibility="Visible">
        <TextBox x:Name="_depTabValidation03_Name" Grid.Column="0" Background="Transparent" BorderThickness="0" TextWrapping="NoWrap" FontSize="18" IsReadOnly="True" Canvas.Left="10" Canvas.Top="10" Height="30" />
        <Rectangle x:Name="_depTabValidation03_Alert" Grid.Column="0" Width="30" Height="30" Fill="Red" Canvas.Left="430" Canvas.Top="9" Visibility="Visible">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_alert}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Rectangle x:Name="_depTabValidation03_Check" Grid.Column="0" Width="30" Height="30" Fill="Green" Canvas.Left="430" Canvas.Top="10" Visibility="Visible">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_check}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
    </Canvas>

    <Canvas x:Name="_depTabValidation04" Grid.Column="0" Margin="9,287,11,214" Background="LightGreen" Visibility="Visible">
        <TextBox x:Name="_depTabValidation04_Name" Grid.Column="0" Background="Transparent" BorderThickness="0" TextWrapping="NoWrap" FontSize="18" IsReadOnly="True" Canvas.Left="10" Canvas.Top="10" Height="30" />
        <Rectangle x:Name="_depTabValidation04_Alert" Grid.Column="0" Width="30" Height="30" Fill="Red" Canvas.Left="430" Canvas.Top="9" Visibility="Visible">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_alert}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Rectangle x:Name="_depTabValidation04_Check" Grid.Column="0" Width="30" Height="30" Fill="Green" Canvas.Left="430" Canvas.Top="10" Visibility="Visible">
            <Rectangle.OpacityMask>
                <VisualBrush Stretch="Fill" Visual="{DynamicResource icons_check}"/>
            </Rectangle.OpacityMask>
        </Rectangle>
    </Canvas>

    <GroupBox Header="Asset Details" Margin="10,376,10,6"/>
    <Grid Margin="0,0,0,10" Name="_depSupportDevice" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="138" Width="480">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Manufacturer:" Grid.Column="0" HorizontalAlignment="Left" FontSize="16"  VerticalAlignment="Center" Foreground="Black" Height="35" Width="160" HorizontalContentAlignment="Right" Margin="10,0,0,0" />
        <TextBox x:Name="TS_Make" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="NoWrap" FontSize="16" IsReadOnly="True" Margin="0,5,0,4" Width="287" BorderBrush="Gray"/>
        <Label Content="Model:"  Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" FontSize="16" VerticalAlignment="Center" Foreground="Black" Height="34" Width="160" HorizontalContentAlignment="Right" Margin="10,0,0,0"/>
        <TextBox x:Name="TS_Model" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" TextWrapping="NoWrap" FontSize="16" IsReadOnly="True" Margin="0,4,0,5" Width="287" BorderBrush="Gray"/>
        <Label Content="Serial Number:" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" FontSize="16"  VerticalAlignment="Center" Foreground="Black" Height="35" Width="160" HorizontalContentAlignment="Right" Margin="10,0,0,0"/>
        <TextBox x:Name="TS_SerialNumber" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" TextWrapping="NoWrap" FontSize="16" IsReadOnly="True" Margin="0,5,0,4" Width="287" BorderBrush="Gray"/>
        <Label Content="Asset Tag:" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" FontSize="16" VerticalAlignment="Center" Foreground="Black" Height="34" Width="160" HorizontalContentAlignment="Right" Margin="10,0,0,0"/>
        <TextBox x:Name="TS_AssetTag" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" TextWrapping="NoWrap" FontSize="16" IsReadOnly="True" Margin="0,4,0,5" Width="287" BorderBrush="Gray"/>
    </Grid>

    <Label Content="More Info" Grid.Column="1" FontSize="14" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Foreground="LightSlateGray" />
    <TextBlock x:Name="_depTabMoreInfo" Grid.Column="1" HorizontalAlignment="Left" Margin="10,89,0,0" Width="136" TextWrapping="Wrap" VerticalAlignment="Top" Height="422">
        <Run Text="@Help"/>
    </TextBlock>

</Grid>